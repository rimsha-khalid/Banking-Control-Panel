
@{
    ViewData["Title"] = "LoginError";
}
 
<div class="container-fluid vh-100">
    <div class="row justify-content-center align-items-center h-80">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header text-center bg-primary text-white">
                    <h4>Alert</h4>
                </div>
                <div class="card-body text-center">
                    <p class="lead" style="font-size: 20px">User not found in database</p>
                </div>
                <div class="card-footer text-center">
                    <a href="@Url.Action("Login", "Login")" class="btn btn-secondary" style="color: aliceblue">Close</a>
                </div>
            </div>
        </div>
    </div>
</div>



